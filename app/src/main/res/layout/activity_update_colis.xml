<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextNomCltUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom complet du client"
                android:inputType="text"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gouvernorat"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinnerGouvernoratUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ville"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinnerVilleUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/editTextAdresseUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Adresse complète et disponibilité"
                android:inputType="textMultiLine"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editTextTelephoneUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Téléphone"
                android:inputType="phone"
                android:layout_marginBottom="8dp"/>



            <!-- Désignation -->
            <EditText
                android:id="@+id/editTextDesignationUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Désignation"
                android:inputType="text"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editTextPrixUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prix"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editTextNbArticleUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre d'articles"
                android:inputType="number"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/radioGroupModePaiementUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioButtonEspeceUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Espèce"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radioButtonChequeUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chèque"/>
            </RadioGroup>

            <EditText
                android:id="@+id/editTextCommentaireUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Commentaire"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mettre à jour"/>

        </LinearLayout>


    </RelativeLayout>

